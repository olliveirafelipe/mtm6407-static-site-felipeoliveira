---
import "../styles/global.css";

const {
  title = "Selected Work",
  subtitle = "A collection of design projects that mix storytelling, digital thinking, and visual identity."
} = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>{title} – Felipe Oliveira</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
  </head>

  <body class="highlight-layout">
    <!-- mesmo header do resto do site -->
    <header class="site-header">
      <div class="container header-inner">
        <a href="/" class="logo">Felipe Oliveira</a>

        <nav class="site-nav">
          <a href="/">Home</a>
          <a href="/about">About</a>
          <a href="/portfolio">Portfolio</a>
          <a href="/game-journal">Game Journal</a>
          <a href="/contact">Contact</a>
        </nav>
      </div>
    </header>

    <main class="site-main highlight-main">
      <!-- HERO do portfolio -->
      <section class="highlight-hero">
        <div class="container highlight-hero-inner">
          <h1>{title}</h1>
          {subtitle && <p>{subtitle}</p>}
        </div>
      </section>

      <!-- Conteúdo da página -->
      <div class="container highlight-content">
        <slot />
      </div>
    </main>

    <footer class="site-footer">
      <div class="container">
        <p>© {new Date().getFullYear()} Felipe Oliveira – Design & Game Lab</p>
      </div>
    </footer>
  </body>
</html>
